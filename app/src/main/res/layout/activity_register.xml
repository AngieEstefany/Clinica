<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Credentials.RegisterActivity"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="67dp"
        android:text="Registrate"
        android:layout_marginTop="-50dp"
        android:textColor="@color/turque"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextDni"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"
        android:textSize="14dp"
        android:hint="DNI"
        android:backgroundTint="@color/turque"

        />

    <EditText
        android:id="@+id/editTextNombres"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:textSize="14dp"
        android:textColorHint="@color/lead"
        android:textColor="@color/lead"
        android:backgroundTint="@color/turque"
        android:layout_marginTop="15dp"
        android:hint="Nombres" />

    <EditText
        android:id="@+id/editTextApellidos"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:textSize="14dp"
        android:textColor="@color/lead"
        android:backgroundTint="@color/turque"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/lead"
        android:hint="Apellidos"

        />

    <EditText
        android:id="@+id/editTextCelular"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="-5dp"
        android:textSize="14dp"
        android:hint="Celular"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"
        android:backgroundTint="@color/turque"
        android:layout_marginTop="15dp"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextCorreo"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:textSize="14dp"
        android:hint="Correo"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"
        android:backgroundTint="@color/turque"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextDireccion"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:hint="Dirección"
        android:textSize="14dp"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"
        android:backgroundTint="@color/turque"/>

    <EditText
        android:id="@+id/editTextContraseñaReg"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:hint="Contraseña"
        android:textSize="14dp"
        android:textColor="@color/lead"
        android:backgroundTint="@color/turque"
        android:textColorHint="@color/lead"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextConfirmarContraseña"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/turque"
        android:ems="10"
        android:hint="Confirmar Contraseña"
        android:inputType="textPassword"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnButtonRegistro"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="14dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginTop="10pt"
        android:text="Registrarse" />

</LinearLayout>